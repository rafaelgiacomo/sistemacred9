@model SistemaCred9.Web.UI.ViewModels.Banco.BancoViewModel

@{
    ViewBag.TitleSmall = "Adicionar Banco";
}

<div class="row">
    <div class="col-md-9">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Informe os dados do Banco</h3>
            </div>
            @using (Html.BeginForm("Adicionar", "Banco", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    @Html.ValidationSummary(true)

                    <div class="form-horizontal">

                        <div class="form-group">

                            <div class="col-md-3">
                                @Html.LabelFor(model => model.Banco, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.Banco,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Código do Banco",
                                        }
                                })
                                @Html.ValidationMessageFor(model => model.Banco)
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(model => model.Prazo, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.Prazo,
                                     new
                                     {
                                         htmlAttributes = new
                                         {
                                             @class = "form-control",
                                             @placeholder = "Descrição Espécie",
                                         }
                                 })
                                @Html.ValidationMessageFor(model => model.Prazo)
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(model => model.MinLiquido, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.MinLiquido,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Mínimo de Valor Líquido",
                                        }
                                })
                                @Html.ValidationMessageFor(model => model.MinLiquido)
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(model => model.MinParcela, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.MinParcela,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Mínimo de Valor de Parcela",
                                        }
                                })
                                @Html.ValidationMessageFor(model => model.MinParcela)
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-3">
                                @Html.LabelFor(model => model.Coeficiente, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.Coeficiente,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Coeficiente",
                                        }
                                })
                                @Html.ValidationMessageFor(model => model.Coeficiente)
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(model => model.MinParcelasEmAberto, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.MinParcelasEmAberto,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Mínimo em aberto",
                                        }
                                })
                                @Html.ValidationMessageFor(model => model.MinParcelasEmAberto)
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(model => model.MaxParcelasEmAberto, htmlAttributes: new { @class = "control-label" })

                                @Html.EditorFor(model => model.MaxParcelasEmAberto,
                                     new
                                     {
                                         htmlAttributes = new
                                         {
                                             @class = "form-control",
                                             @placeholder = "Máximo em aberto",
                                         }
                                 })
                                @Html.ValidationMessageFor(model => model.MaxParcelasEmAberto)
                            </div>

                        </div>

                    </div>

                    <div class="box-footer">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                        <input type="reset" value="Limpar" class="btn btn-warning" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info pull-right" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
