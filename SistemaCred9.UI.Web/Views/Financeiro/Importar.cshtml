@model SistemaCred9.Web.UI.ViewModels.Financeiro.ImportarViewModel

@{
    ViewBag.TitleSmall = "Importar Planilha de Contratos";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Informe os dados de usuário</h3>
            </div>
            @using (Html.BeginForm("Importar", "Financeiro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    @Html.ValidationSummary(true)

                    <div class="form-horizontal">

                        <div class="form-group">
                            <div class="col-md-12">
                                <label class="control-label">Tipo de Planilha</label><br />
                                @Html.DropDownListFor(model => model.TipoPlanilhaId, Model.TipoPlanilha, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.TipoPlanilhaId)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="file" class="btn btn-file" name="Files" id="Files" />
                            </div>
                        </div>

                    </div>

                    <div class="box-footer">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info pull-right" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
