@model SistemaCred9.Web.UI.ViewModels.Financeiro.FinanceiroIndexViewModel

@{
    ViewBag.TitleSmall = "Financeiro";
}

<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Importar Contratos", "Importar", "Financeiro", new { @class = "btn btn-primary btn-block margin-bottom" })

    </div>
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Contratos do Mês @Model.Mes/@Model.Ano</h3>
            </div>
            <div class="box-body">

                <table id="contratos" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Contrato</th>
                            <th>Data Lançamento</th>
                            <th>Tabela</th>
                            <th>Percentual Comissão</th>
                            <th>Cliente</th>
                            <th>Assesor</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListaContratos)
                        {
                        <tr>
                            <td>@item.Contrato</td>
                            <td>@item.DataLancamento</td>
                            <td>@item.Tabela</td>
                            <td>@item.PercentualComissao</td>
                            <td>@item.NomeCliente</td>
                            <td>@item.NomeAssessor</td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Usuario", new { @entidadeId = item.Id }, new { @class = "btn btn-success btn-xs" })
                                @Html.ActionLink("Excluir", "Excluir", "Usuario", new { @entidadeId = item.Id }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Contrato</th>
                            <th>Data Lançamento</th>
                            <th>Tabela</th>
                            <th>Percentual Comissão</th>
                            <th>Cliente</th>
                            <th>Assesor</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

@section scripts
{
    <link href="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#contratos').DataTable({
                language: {
                    "url": 'http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json'
                }
            });
        });
    </script>
}
