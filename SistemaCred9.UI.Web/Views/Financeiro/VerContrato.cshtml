@model SistemaCred9.Web.UI.ViewModels.Financeiro.VerContratoViewModel

@{
    ViewBag.TitleSmall = "Financeiro";
}

<div class="row">

    <div class="col-md-12">

        <div class="box">

            <div class="box-header">
                <div class="box-header">
                    <h3 class="box-title">Dados do contrato</h3>
                </div>
            </div>

            <div class="box-body">

                <div class="row">

                    <div class="col-md-2">
                        <label>Contrato: </label> @Model.Contrato
                    </div>

                    <div class="col-md-2">
                        <label>Data Lançamento: </label> @Model.DataLancamento
                    </div>

                    <div class="col-md-2">
                        <label>CPF: </label> @Model.Cpf
                    </div>

                    <div class="col-md-3">
                        <label>Cliente: </label> @Model.NomeCliente
                    </div>

                    <div class="col-md-3">
                        <label>Assessor: </label> @Model.NomeAssessor
                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

<div class="row">
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Pagamentos importados</h3>
            </div>
            <div class="box-body">

                <table id="contratos" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Contrato</th>
                            <th>Cliente</th>
                            <th>CPF</th>
                            <th>Tabela</th>
                            <th>Percentual Comissão</th>
                            <th>Data Comissão</th>
                            <th>Tipo Planilha</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ListaContratoPagamento)
                        {
                        <tr>
                            <td>@item.Contrato</td>
                            <td>@item.NomeCliente</td>
                            <td>@item.Cpf</td>
                            <td>@item.Tabela</td>
                            <td>@item.PercentualComissao</td>
                            <td>@item.DataComissao</td>
                            <td>@item.TipoPlanilha</td>
                            <td>
                            </td>
                        </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Contrato</th>
                            <th>Cliente</th>
                            <th>CPF</th>
                            <th>Tabela</th>
                            <th>Percentual Comissão</th>
                            <th>Data Comissão</th>
                            <th>Tipo Planilha</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

@section scripts
{
    <link href="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#contratos').DataTable({
                language: {
                    "url": 'http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json'
                }
            });
        });
    </script>
}
