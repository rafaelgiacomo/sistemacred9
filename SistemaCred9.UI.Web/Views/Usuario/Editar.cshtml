@model SistemaCred9.Web.UI.ViewModels.Usuario.UsuarioViewModel

@{
    ViewBag.TitleSmall = "Adicionar Usuário";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Informe os dados de usuário</h3>
            </div>
            @using (Html.BeginForm("Adicionar", "Usuario", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    @Html.ValidationSummary(true)

                    <div class="form-horizontal">

                        @Html.HiddenFor(model => model.Id)

                        @* Campo Nome *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Nome,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Nome de usuário",
                                        }
                                })
                                @Html.ValidationMessageFor(model => model.Nome)
                            </div>
                        </div>

                        @* Campo Nome Usuario *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.NomeUsuario, htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.NomeUsuario,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Nome de usuário",
                                        }
                                })
                                @Html.ValidationMessageFor(model => model.NomeUsuario)
                            </div>
                        </div>

                        @* Campo Senha *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Senha,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @type = "password",
                                            @placeholder = "Min 5 e max 15 caracteres",
                                        }
                                    })
                                @Html.ValidationMessageFor(model => model.Senha)
                            </div>
                        </div>

                        @* Campo ConfirmarSenha *@
                        <div class="form-group">
                            <label class="control-label col-md-3">Confirmar Senha</label>

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.ConfirmarSenha,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @type = "password",
                                            @placeholder = "Min 5 e max 15 caracteres",
                                        }
                                    })
                                @Html.ValidationMessageFor(model => model.ConfirmarSenha)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <label class="control-label">Tipo de Usuário</label><br />
                                @Html.DropDownListFor(model => model.TipoUsuarioSelecionado,
                                    Model.TipoUsuario, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TipoUsuarioSelecionado)
                            </div>
                        </div>

                    </div>

                    <div class="box-footer">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                        <input type="reset" value="Limpar" class="btn btn-warning" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info pull-right" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
