@model SistemaCred9.Web.UI.ViewModels.Usuario.UsuarioViewModel

@{
    ViewBag.TitleSmall = "Exclusão de registro";
}

<div class="row">
    <div class="col-md-12">
        <h4>Tem certeza que deseja excluir esse registro?</h4>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.NomeUsuario)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.NomeUsuario)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-success" />
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info" })
                </div>
            }
        </div>
    </div>
</div>