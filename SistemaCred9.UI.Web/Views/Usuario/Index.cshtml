@model SistemaCred9.Web.UI.ViewModels.Usuario.UsuarioIndexViewModel

@{
    ViewBag.TitleSmall = "Usuarios";
}

<div class="row">
    <div class="col-md-2">
        @Html.ActionLink("Adicionar", "Adicionar", "Usuario", new { @class = "btn btn-primary btn-block margin-bottom" })

    </div>
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Usuarios Cadastrados</h3>
            </div>
            <div class="box-body">

                <table id="usuarios" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Login</th>
                            <th>E-mail</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Usuarios)
                        {
                            <tr>
                                <td>@item.Nome</td>
                                <td>@item.NomeUsuario</td>
                                <td>@item.Email</td>
                                <td>
                                    @Html.ActionLink("Editar", "Editar", "Usuario", new { @entidadeId = item.Id }, new { @class = "btn btn-success btn-xs" })
                                    @Html.ActionLink("Excluir", "Excluir", "Usuario", new { @entidadeId = item.Id }, new { @class = "btn btn-danger btn-xs" })
                                    @Html.ActionLink("Permissões", "Permissoes", "Usuario", new { @entidadeId = item.Id }, new { @class = "btn btn-default btn-xs" })
                                </td>
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Nome</th>
                            <th>Login</th>
                            <th>E-mail</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

@section scripts
{
    <link href="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.7/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/AdminLTE/plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#usuarios').DataTable({
                language: {
                    "url": 'http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json'
                }
            });
        });
    </script>
}
