@model SistemaCred9.Web.UI.ViewModels.Usuario.TrocarSenhaViewModel

@{
    ViewBag.TitleSmall = "Alteração de Senha";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Informe sua nova senha</h3>
            </div>
            @using (Html.BeginForm("TrocarSenha", "Usuario", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    @Html.ValidationSummary(true)

                    <div class="form-horizontal">
                        @Html.HiddenFor(model => model.Id)

                        @* Campo Login *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Login,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @placeholder = "Nome de usuário",
                                            @readonly = "readonly"
                                        }
                                    })
                                @Html.ValidationMessageFor(model => model.Login)
                            </div>
                        </div>

                        @* Campo Senha *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Senha, htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.Senha,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @type = "password",
                                            @placeholder = "Min 5 e max 15 caracteres",
                                        }
                                    })
                                @Html.ValidationMessageFor(model => model.Senha)
                            </div>
                        </div>

                        @* Campo ConfirmarSenha *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.ConfirmarSenha, htmlAttributes: new { @class = "control-label col-md-3" })

                            <div class="col-md-9">
                                @Html.EditorFor(model => model.ConfirmarSenha,
                                    new
                                    {
                                        htmlAttributes = new
                                        {
                                            @class = "form-control",
                                            @type = "password",
                                            @placeholder = "Min 5 e max 15 caracteres",
                                        }
                                    })
                                @Html.ValidationMessageFor(model => model.ConfirmarSenha)
                            </div>
                        </div>

                    </div>

                    <div class="box-footer">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                        <input type="reset" value="Limpar" class="btn btn-warning" />
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-info pull-right" })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="row">

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



